# vi: set ft=sh :
function venv {
  if [ $# -eq 1 ]; then
    if [ "$1" == "destroy" ]; then
      deactivate
      rm -rf .venv
      return 0
    fi
    cd $1
  fi

  name=$(basename `pwd`)
  location='./.venv'

  if [ ! -d $location ]; then
    pyenv exec virtualenv --prompt='$name | ' $location
  fi

  source $location/bin/activate
}
