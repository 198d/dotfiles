ignore *
unignore from subject to cc date

hdr_order date from to cc subject

mime_lookup application/octet-stream

attachments   +A */.*
attachments   +I text/plain
attachments   -A message/external-body
attachments   -I message/external-body

set spoolfile="imap://mail.leapfrogonline.com/INBOX"
set folder="imap://mail.leapfrogonline.com/INBOX"
set record="imap://mail.leapfrogonline.com/Sent Items"
set postponed="imap://mail.leapfrogonline.com/Drafts"
set trash="imap://mail.leapfrogonline.com/Deleted Items"
set mail_check=60
set timeout=10

set pager_index_lines=10
set hostname="leapfrogonline.com"

unset imap_passive
set imap_check_subscribed

set index_format="[%{%a %b %d %l:%M%p}] [%S] %-20.20F %s"

set message_cachedir="~/.mutt/cache"
set header_cache="~/.mutt/cache"

set sort="threads"
set strict_threads="yes"
set sort_browser="reverse-date"

set mailcap_path="~/.mailcap"
auto_view text/html

